<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="CommonCalendar">
	<typeAlias alias="CommonCalendar" type="fitfame.po.CommonCalendar" />

	<select id="getMonthCalendar" parameterClass="java.util.Map"
	    resultClass="CommonCalendar">
		<![CDATA[ 
			select * from common_calendar where cdate >= #firstDay# and cdate <= #endDay#
		 ]]> 
	</select>
	
	<select id="getCommonCalendarByDate" 
	    resultClass="CommonCalendar">
		select * from common_calendar where cdate = #value#
	</select>
</sqlMap>