<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="FavorTopic">
	<typeAlias alias="FavorTopic" type="fitfame.po.FavorTopic" />

	<select id="getFavorTopic" parameterClass="FavorTopic" resultClass="FavorTopic">
		select * from favor_topic where tid = #tid# and uid = #uid#
	</select>

	<insert id="insertFavorTopic" parameterClass="FavorTopic">
		insert into favor_topic values (#tid#, #uid#)
	</insert>
</sqlMap>