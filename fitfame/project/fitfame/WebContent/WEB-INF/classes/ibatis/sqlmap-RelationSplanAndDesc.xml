<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="RelationSplanAndDesc">
	<typeAlias alias="RelationSplanAndDesc" type="fitfame.po.RelationSplanAndDesc" />

	<select id="getTopRankDesc" resultClass="Integer">
		select rank from relation_splan_and_desc where spid = #vaule# order by rank desc limit 1
	</select>

	<insert id="insertRelationSplanAndDesc" parameterClass="RelationSplanAndDesc">
		insert
		into relation_splan_and_desc values (null, #spid#, #did#,
		#rank#, #quantity# ,
		#duration#)
	</insert>

	<delete id="deleteRelationSplanAndDesc">
		delete from relation_splan_and_desc where id
		= #value#
	</delete>

	<update id="updateRelationSplanAndDesc" parameterClass="RelationSplanAndDesc">
		update relation_splan_and_desc
		<dynamic prepend="SET ">
			<isNotEqual property="rank" compareValue="-1" prepend=","><![CDATA[ rank=#rank# ]]></isNotEqual>
			<isNotEqual property="quantity" compareValue="-1" prepend=","><![CDATA[ quantity=#quantity# ]]></isNotEqual>
			<isNotEqual property="duration" compareValue="-1" prepend=","><![CDATA[ duration=#duration# ]]></isNotEqual>
		</dynamic>
		<dynamic prepend="WHERE">
			id = #id#
		</dynamic>
	</update>
</sqlMap>