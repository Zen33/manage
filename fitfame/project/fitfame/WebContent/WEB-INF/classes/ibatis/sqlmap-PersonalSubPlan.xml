<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="PersonalSubPlan">
	<typeAlias alias="PersonalSubPlan" type="fitfame.po.PersonalSubPlan" />

	<select id="getPersonalSubPlanList" resultClass="PersonalSubPlan">
		select * from personal_sub_plan where ppid = #value# order by rank asc
	</select>
	
    <select id="getPersonalSubPlan" resultClass="PersonalSubPlan">
		select * from personal_sub_plan where id = #value#
	</select>
	
	<insert id="insertPersonalSubPlan" parameterClass="PersonalSubPlan">
		insert into personal_sub_plan values (null, #ppid#, #rank#, #sdate#, #edate#, #step#)
	</insert>
	
	<delete id="deletePersonalSubPlan" parameterClass="PersonalSubPlan">
		delete from personal_sub_plan where  ppid = #ppid#
	</delete>
	
	<update id="updatePersonalSubPlan" parameterClass="PersonalSubPlan">
	update personal_sub_plan
	<dynamic prepend="SET ">
	        <isNotEqual property="rank" compareValue="-1" prepend=","><![CDATA[ rank=#rank# ]]></isNotEqual>
			<isNotEqual property="edate" compareValue="-1" prepend=","><![CDATA[ edate=#edate# ]]></isNotEqual>
			<isNotEqual property="sdate" compareValue="-1" prepend=","><![CDATA[ sdate=#sdate# ]]></isNotEqual>
			<isNotEqual property="step" compareValue="-1" prepend=","><![CDATA[ step=#step# ]]></isNotEqual>
    </dynamic>
	<dynamic prepend="WHERE">
		 id = #id#
	</dynamic>
	</update>
</sqlMap>