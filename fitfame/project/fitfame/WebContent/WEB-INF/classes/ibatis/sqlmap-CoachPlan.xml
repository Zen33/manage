<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="CoachPlan">
	<typeAlias alias="CoachPlan" type="fitfame.po.CoachPlan" />

	<select id="getCoachPlanList" resultClass="CoachPlan">
		select * from
		coach_plan where cid = #value#
	</select>

	<select id="getCoachPlan" resultClass="CoachPlan">
		select * from coach_plan
		where pid = #value#
	</select>

	<insert id="insertCoachPlan" parameterClass="CoachPlan">
		insert into coach_plan values (#pid#, #cid#, #name#, #intro#, #icon#,
		#duration#)
	</insert>

	<delete id="deleteCoachPlan">
		delete from coach_plan where pid = #value#
	</delete>

	<update id="updateCoachPlan" parameterClass="CoachPlan">
		update coach_plan
		<dynamic prepend="SET ">
			<isNotEmpty property="name" prepend=","><![CDATA[ name=#name# ]]></isNotEmpty>
			<isNotEmpty property="intro" prepend=","><![CDATA[ intro=#intro# ]]></isNotEmpty>
			<isNotEmpty property="icon" prepend=","><![CDATA[ icon=#icon# ]]></isNotEmpty>
			<isNotEqual property="duration" compareValue="-1" prepend=","><![CDATA[ duration=#duration# ]]></isNotEqual>
		</dynamic>
		<dynamic prepend="WHERE">
			pid = #pid#
		</dynamic>
	</update>
</sqlMap>